[Unit]
Description=Graphite Carbon Cache Instance %I
After=network.target

[Service]
Type=forking
StandardOutput=syslog
StandardError=syslog
ExecStart={{ graphite_bin }}/carbon-cache.py --config=/etc/carbon/carbon.conf --pidfile=/var/run/carbon-cache-%i.pid --logdir=/var/log/carbon/ --instance=%i start
ExecReload=/bin/kill -USR1 $MAINPID
PIDFile=/var/run/carbon-cache-%i.pid

[Install]
WantedBy=multi-user.target
DefaultInstance=a
